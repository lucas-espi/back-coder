<div class="form-client"> 
  <form action="/realtimeproducts" method="post" id="formProd">
    <label for="title">Titulo: </label>
    <input type="text" id="title" name="title">
    <label for="description">Descripcion: </label>
    <input type="text" id="description" name="description">
    <label for="price">Precio: </label>
    <input type="number" id="price" name="price">
    <label for="thumbnails">Thumbnails: </label>
    <input type="text" id="thumbnails" name="thumbnails">
    <label for="code">CÃ³de: </label>
    <input type="text" id="code" name="code">
    <label for="stock">Stock: </label>
    <input type="number" id="stock" name="stock"> 
    <input class="btn" type="submit" value="enviar">
  </form>
  
  
</div>
<div class="list-prod">
  {{#if products}}
  <h1>Aqui tenemos la lista de productos "/realtimeproducts":</h1>
  <ul>
    {{#each products}}
    <li>
      <h4>Producto:{{this.title}}</h4>
      <p>Id:{{this.id}}</p>
      <p>Descripcion:{{this.description}}</p>
      <p>Precio:{{this.price}}</p>
    </li>
    {{/each}}
  </ul>
  {{else}}
  <h2>Aun no tenemos productos cargados!</h2>
  {{/if}}
</div>

